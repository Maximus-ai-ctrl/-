CREATE TABLE coffee (
    id INTEGER PRIMARY KEY,
    name TEXT NOT NULL,
    roast_level TEXT NOT NULL,
    ground_or_whole TEXT NOT NULL,
    taste_description TEXT NOT NULL,
    price REAL NOT NULL,
    package_volume TEXT NOT NULL
);

